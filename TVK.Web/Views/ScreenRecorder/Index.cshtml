
@{
    ViewData["Title"] = "Запись экрана";
    var address = Model?.ip_PC ?? "192.168.0.30:5000";
    var command = Model?.Command ?? "start";
    testSQLContext db = new testSQLContext();
    var PC_address = db.Pc.ToList();
}

    <div class="text-center">
        <form method="post" action="screenrecorder">
            <p>
                <label for="address">Address:</label> <input type="text" name="address" id="address" value="@address" />
            </p>
            <p>
                @*<label for="command">Command:</label> <input type="text" name="command" id="command" value="@command" />*@

                <label for="command">Command: </label>
                <select name="command" id="command">
                    <option>start</option>
                    <option>stop</option>
                </select>

            </p>
            <p>
                <input type="button" value="Run" id="click" />
            </p>
        </form>
        <br />
        <br />
        <table class="mytable">
            <thead>
                <tr><th>IP адреса компьютеров</th></tr>
            </thead>
            <tbody>
                @foreach (var pc in PC_address)
                {
                    <tr><td>@pc.IpAddress </td><td>@pc.NamePc</td></tr>
                }
            </tbody>
        </table>
        <br />
        <br />

    </div>

    <img src='recived/screenshot-1.jpeg' id="image" style="max-width: 100%;" />





